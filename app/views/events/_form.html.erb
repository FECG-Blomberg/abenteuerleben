<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <sup>* = erforderlich</sup>

  <div class="input">
    <%= form.label :title, "Titel" + " *", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div class="input">
    <%= form.label :description, "Beschreibung", style: "display: block" %>
    <%= form.text_area :description, rows: "5" %>
  </div>

  <div class="input">
    <%= form.label :start_date, "Startdatum" + " *", style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>

  <div class="input">
    <%= form.label :end_date, "Enddatum", style: "display: block" %>
    <%= form.date_field :end_date %>
  </div>

  <div class="input">
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>
