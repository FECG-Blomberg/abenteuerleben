<%= stylesheet_link_tag "event" %>

<div class="container">
  <h1 class="mb-32">Termin Erstellen</h1>

  <form data-hx-post="<%= admin_events_path %>"
        data-hx-swap="outerHTML"
        data-hx-select=".event-form"
        class="event-form container">


    <p>* = Pflichtfelder</p>
    <br>

    <input type="hidden" value="post" name="_method">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <%= render TextInputComponent.new "Titel", "event[title]", @event.title, placeholder: "Titel", required: true, error_msg: @event.errors[:title].first %>
    <%= render TextInputComponent.new "Inhalt", "event[description]", @event.description, placeholder: "Inhalt", required: true, error_msg: @event.errors[:description].first, type: :textarea %>

    <div class="admin-event-dates">
      <%= render DatePickerComponent.new label: "Start Datum", date: @event.start_date, object: 'event', method: 'start_date', error_msg: @event.errors[:start_date].first %>
      <%= render DatePickerComponent.new label: "End Datum", date: @event.end_date, object: 'event', method: 'end_date', error_msg: @event.errors[:end_date].first %>
    </div>

    <%= render(ButtonComponent.new 'Speichern', classes: 'page-form__submit-btn', style: 'secondary') %>
  </form>
</div>
