      <legend>
        <%= forticon 'address-book', height: 18, style: 'margin-right: var(--spacing-sm)' %>
      </legend>

      <%= render 'formelements/input', form: form, record: @parent_contact, field_name: :telephone, label: 'Telefonnummer', required: true %>
      <%= render 'formelements/input', form: form, record: @parent_contact, field_name: :housephone, label: 'Telefonnummer 2' %>
      <%= render 'formelements/input', form: form, record: @parent_contact, input_type: :email, field_name: :email, label: 'Email', required: true %>


      <%# if @parent.member %>
