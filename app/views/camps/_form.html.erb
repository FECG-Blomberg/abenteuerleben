<%= form_with(model: camp, url: url) do |form| %>
  <% if camp.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(camp.errors.count, "error") %> prohibited this camp from being saved:</h2>

      <ul>
        <% camp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input">
    <%= form.hidden_field :campyear_id %>
  </div>

  <div class="input">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="input">
    <%= form.label :date_start, "Startdatum" %>
    <%= form.date_field :date_start, required: true %>
  </div>

  <div class="input">
    <%= form.label :date_end, "Enddatum" %>
    <%= form.date_field :date_end, required: true %>
  </div>

  <div class="input">
    <%= form.label :participants_year_start, "Teilnehmer jahr von" %>
    <%= form.number_field :participants_year_start, required: true %>
  </div>

  <div class="input">
    <%= form.label :participants_year_end, "Teilnehmer jahr bis" %>
    <%= form.number_field :participants_year_end, required: true %>
  </div>

  <div class="input">
    <%= form.label :max_participant_count, "Maximale Teilnehmerzahl" %>
    <%= form.number_field :max_participant_count, required: true %>
  </div>

  <div class="input">
    <%= form.label :price, "Anmeldepreis" %>
    <%= form.number_field :price, required: true, step: 10 %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>
