<div id="<%= dom_id helper %>">
  <h2>Mitarbeiter infos</h2>
  <p>
    <strong>Nachname:</strong>
    <%= helper.surname %>
  </p>

  <p>
    <strong>Vorname:</strong>
    <%= helper.forename %>
  </p>

  <p>
    <strong>Geburtstag:</strong>
    <%= helper.birthday %>
  </p>

  <p>
    <strong>Geburtsort:</strong>
    <%= helper.birthplace %>
  </p>

  <p>
    <strong>Telefonnummer:</strong>
    <%= helper.telephone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= helper.email %>
  </p>

  <p>
    <strong>Stra√üe und Hausnummer:</strong>
    <%= helper.streethouse %>
  </p>

  <p>
    <strong>PLZ Ort:</strong>
    <%= helper.postcity %>
  </p>

  <p>
    <strong>Deine Geschichte:</strong>
    <%= helper.story %>
  </p>

  <p>
    <strong>Dienst:</strong>
    <%= helper.duty %>
  </p>

  <br>
  <h2>Camp anmeldungen</h2>

  <% unless helper.registrations.count < 2 %>
    <p>
      <strong>Bevorzugtes Camp:</strong>
      <%= helper.preferredCamp %>
    </p>
    <br>
  <% end %>

  <div>
    <% helper.registrations.each do |registration| %>
      <%= render 'registrations/registration', registration: registration %>
      <br>
    <% end %>
  </div>

</div>
